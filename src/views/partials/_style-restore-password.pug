style.
    .container-mail {
        margin: 0 auto;
        width: 50%;
        -webkit-box-shadow: 4px 4px 27px 0px rgba(34, 60, 80, 0.2);
        -moz-box-shadow: 4px 4px 27px 0px rgba(34, 60, 80, 0.2);
        box-shadow: 4px 4px 27px 0px rgba(34, 60, 80, 0.2);
        padding: 20px;
        background-color: #fffffc;
        border: 25px solid;
        border-image-slice: 1;
        border-image-source: linear-gradient(to left, #743ad5, #d53a9d);
    }

    p {
        font-size: 30px;
    }

    a {
        text-transform: uppercase;
        display: block;
        width: 60%;
        text-align: center;
        margin: 0 auto;
        text-decoration: none;
        color: #fffffc;
        padding: 15px;
        background: -webkit-gradient(linear, left top, right bottom, from(#7dd56f), to(#28b487));
        background: linear-gradient(to right bottom, #7dd56f, #28b487);
    }

    a:hover {
       transform: scale(1.1);
    }
